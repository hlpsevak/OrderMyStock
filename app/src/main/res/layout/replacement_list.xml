<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/iv_replace_productimage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="productname"
            android:textAlignment="center"
            android:textSize="22dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="product description"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_productprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="15rs"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="15rs"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="15rs"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/tv_replace_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/12/21"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp">

            <Button
                android:id="@+id/btn_btn_replace_accept"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:background="@drawable/buttonstyle"
                android:capitalize="none"
                android:text="Accept"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_replace_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:text="Reject"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>